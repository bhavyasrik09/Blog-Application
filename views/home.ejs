<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
    }

    .container {
      width: 90%;
      margin: auto;
      padding: 20px;
    }

    .create-btn {
      display: inline-block;
      padding: 12px 18px;
      background-color: #7D3C98;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      text-align: center;
      margin-bottom: 20px;
      font-weight: bold;
    }

    .post {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin: 10px 0;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .post .title {
      font-size: 18px;
      font-weight: bold;
      color: #333;
      text-align: center;
      display: inline-block;
      background-color: #8E44AD;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
    }

    .post .buttons {
      display: flex;
      gap: 10px;
    }

    .btn {
      padding: 8px 12px;
      color: white;
      text-decoration: none;
      border: none;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
    }

    .btn.delete {
      background-color: #E74C3C;
    }

    .btn.edit {
      background-color: #8E44AD;
    }

    .btn:hover {
      opacity: 0.9;
    }

    /* Ensure the title link behaves as a button */
    .title:hover {
      opacity: 0.8;
    }
  </style>
</head>
<body>
  <h1>Blog Posts</h1>
  <div class="container">
    <!-- Create a new post button -->
    <a href="/create" class="create-btn">Create a New Post</a>

    <!-- Display posts -->
    <% posts.forEach(post => { %>
      <div class="post">
        <!-- Make title a clickable button -->
        <a href="/blog/<%= post.id %>" class="title">
          <%= post.title %>
        </a>
        
        <div class="buttons">
          <form action="/delete/<%= post.id %>" method="POST">
            <button type="submit" class="btn delete">Delete</button>
          </form>
          <a href="/edit/<%= post.id %>" class="btn edit">Edit</a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
